@model ConfigurationModel

@using Nop.Plugin.Misc.FortNox
@using Nop.Plugin.Misc.FortNox.Models

@{
    Layout = "_ConfigurePlugin";
    Html.AddCssFileParts("~/Plugins/Misc.FortNox/Content/styles.css", excludeFromBundle: true);
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="FortNox" asp-action="Configure" method="post">
    <nop-panels id="fortnox-panels">
        <nop-panel asp-name="fortnox-general" asp-icon="fa fa-info" asp-title="@T("Plugins.Misc.FortNox.General")" asp-hide-block-attribute-name="@FortNoxDefaults.HideGeneralBlock" asp-hide="@Model.HideGeneralBlock" asp-advanced="false">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="AuthorizationCode" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="AuthorizationCode" />
                                <span asp-validation-for="AuthorizationCode"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="AccessToken" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="AccessToken" />
                                <span asp-validation-for="AccessToken"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="ClientId" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="ClientId" />
                                <span asp-validation-for="ClientId"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="ClientSecret" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="ClientSecret" />
                                <span asp-validation-for="ClientSecret"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="OnlyCompanyCustomer" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="OnlyCompanyCustomer" />
                                <span asp-validation-for="OnlyCompanyCustomer"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="TermsOfPayment" />
                            </div>
                            <div class="col-md-9">
                                <nop-select asp-for="TermsOfPayment" asp-items="Model.AvailableTermsOfPayments"/>
                                <span asp-validation-for="TermsOfPayment"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="DefaultPriceListCode" />
                            </div>
                            <div class="col-md-9">
                                <nop-select asp-for="DefaultPriceListCode" asp-items="Model.AvailablePriceListCodes" />
                                <span asp-validation-for="DefaultPriceListCode"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="SalesAccountSweden" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SalesAccountSweden" />
                                <span asp-validation-for="SalesAccountSweden"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="SalesAccountEUTaxed" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SalesAccountEUTaxed" />
                                <span asp-validation-for="SalesAccountEUTaxed"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="SalesAccountEUNotTaxed" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SalesAccountEUNotTaxed" />
                                <span asp-validation-for="SalesAccountEUNotTaxed"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="SalesAccountNonEU" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SalesAccountNonEU" />
                                <span asp-validation-for="SalesAccountNonEU"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-9 col-md-offset-3">
                                <input type="submit" name="save" class="btn btn-primary" value="@T("Admin.Common.Save")" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nop-panel>
    </nop-panels>
</form>